<%= stylesheet_link_tag "contact_request" %>

<section id="message-confirmation">
  <div class="row">
    <div id="message" class="col s12 m8 offset-m2 l6 offset-l3">
      <h4><%= "#{@message[:first_name]} #{@message[:last_name]}," %></h4>
      <div id="success-message">Thanks, your message has been submitted successfully!</div>
      <div class="message-content">
        <span class="message-piece">Name</span>
        <span class="message-value"><%= "#{@message[:first_name]} #{@message[:last_name]}" %></span>
      </div>
      <div class="message-content">
        <span class="message-piece">Email</span>
        <span class="message-value"><%= @message[:email] %></span>
      </div>
      <div class="message-content">
        <span class="message-piece">Message</span>
        <span class="message-value"><%= @message[:message] %></span>
      </div>
      <div id="keep-exploring">
        <%= link_to 'Keep Exploring',root_path %>
      </div>
    </div>
  </div>
</section>
